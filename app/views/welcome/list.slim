doctype html
html
  div class="section list"
    div class="container"
      div class="row"
        div class="five columns"
          table class="u-full-width"
            thead
              tr
                th Name
                th Popularity index
            tbody
            - for item in @list
              tr
                td = item.name
                td 1
        div class="seven columns"
          div class="container map-container"
            div class="map"

css:
  table {
    display: block;
    width: 100%;
    height: 80vh;
    overflow-y: scroll;
    table-layout: fixed;
  }

  .list-container {
    padding-top: 5vh 0 0 0;
    background-color: red;
  }

  .map {
    margin: 2% 2% 2% 2%;
    height: 50vh;
    width: 70vw;
  }

  @media screen and (min-width: 1000px) {
    .map {
      margin: 15% 5% 15% 0;
      height: 70vh;
      width: 35vw;
    }
  }

  .five.columns {
    width: 100%;
    margin-left: 0px;
    text-align: center;
  }

  @media (min-width: 1000px) {
    .five.columns {
      width: 39.3%;
    }
  }

  .hover {
    background: #ddd;
  }

javascript:
  $('tr').mouseover(function(){
    $(this).addClass('hover');
  })

  $('tr').mouseout(function(){
      $(this).removeClass('hover');
   });


  var map;
  postal_code_lat = parseFloat("#{@postal_code.lat}");
  postal_code_lon = parseFloat("#{@postal_code.long}");

  function initMap() {
    map = new google.maps.Map(document.getElementsByClassName('map')[0], {
      center: {lat: postal_code_lat, lng: postal_code_lon},
      zoom: 15
    });
  }

= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCR62jOj4Przy7B7L_k7gq4qSq7_N-mROM&callback=initMap", :async => true, :defer => 'defer'